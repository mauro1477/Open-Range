{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}}" data-template="base.twig">
		{{ function('wp_body_open') }}
		<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
		<header class="header" >
			{% block header %}
				<div class="wrapper">
					<!-- Navigation vue component -->
					<nav id="nav-main" class="nav-main" role="navigation"></nav>
				</div>
			{% endblock %}
		</header>
		<section id="content" role="main" class="flex justify-center max-w-7xl max-sm:pr-4 max-sm:pl-4 m-auto">
			{% if title %}<h1 class="title">{{title}}</h1>{% endif %}
			<div class="w-1/1 max-w-1/1">
				{% block content %}
					Sorry, no content
				{% endblock %}
			</div>
		</section>

		{% block footer %}
			<!-- Footer vue component -->
			<footer id="footer" class="footer"></footer>
			{{ function('wp_footer') }}
		{% endblock %}
		<script src="https://unpkg.com/default-passive-events"></script>
	</body>
</html>
